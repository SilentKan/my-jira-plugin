<?xml version="1.0" encoding="UTF-8"?>
<atlassian-plugin key="com.example.my-jira-plugin-backend"
                  name="My Plugin"
                  plugins-version="2">

  <plugin-info>
    <description>My plugin description</description>
    <version>1.0.0</version>
    <vendor name="Example Company" url="https://example.com"/>
  </plugin-info>

  <!-- Сервлет для React -->
  <servlet name="My React Page Servlet"
           key="my-react-page"
           class="com.example.plugin.MyReactPageServlet">
    <url-pattern>/my-react-page</url-pattern>
    <load-on-startup>1</load-on-startup>
  </servlet>


  <web-resource key="react-externals" name="React Externals">
    <dependency>com.atlassian.plugins.atlassian-plugins-webresource-rest:react</dependency>
    <dependency>com.atlassian.plugins.atlassian-plugins-webresource-rest:react-dom</dependency>
    <context>atl.general</context>
  </web-resource>

  <web-resource key="my-plugin" name="React Plugin Resources">
    <dependency>com.atlassian.plugins.atlassian-plugins-webresource-rest:react</dependency>
    <dependency>com.atlassian.plugins.atlassian-plugins-webresource-rest:react-dom</dependency>
    <resource type="download" name="my-plugin.js" location="js/my-plugin.js">
      <param name="batch" value="false"/>
    </resource>
    <resource type="download" name="my-plugin.css" location="css/my-plugin.css"/>
    <context>atl.general</context>
  </web-resource>

  <!-- REST API -->
  <rest key="my-rest" path="/myplugin" version="1.0">
    <description>Provides REST endpoints for the plugin</description>
    <package>com.example.plugin.api</package>
  </rest>

</atlassian-plugin>
