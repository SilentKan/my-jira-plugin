        h2.page-title {
            text-align: center;
            margin-top: 32px;
            margin-bottom: 16px;
        }

        #my-plugin-container {
            min-height: calc(100vh - 240px);
            display: flex;
            flex-direction: column;
            align-items: center;
        }
    </style>

</head>
